{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "skipLibCheck": true,
    "types": [
      "expo-router",
      "react",
      "react-native"
    ]
  },
  "include": [
    "app",
    "lib",
    "scripts",
    "expo-env.d.ts",
    "global.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts"
  ]
}
