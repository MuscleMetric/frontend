{
  "extends": "./node_modules/expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "app",
    "lib",
    "scripts",
    "types",
    "global.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "app/utils/features",
    "features"
  ]
}
